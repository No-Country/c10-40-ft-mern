{
  "openapi": "3.0.0",
  "info": {
    "title": "Workout Tracker NC c10-40-ft-mern",
    "version": "1.0.0",
    "description": "App de entrenamiento muscular desarrollada por unos noobs.",
    "contact": {
      "name": "c10-40-ft-mern",
      "email": "example@example.com"
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Operaciones relacionadas con Login y Registro"
    },
    {
      "name": "User",
      "description": "Operaciones relacionadas con los usuarios"
    },
    {
      "name": "User Autenticado",
      "description": "Operaciones para usuario logueado"
    },
    {
      "name": "Misc",
      "description": "Operaciones Misceláneas."
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "Poner un token valido para los endpoints que lo requieran. IMPORTANTE! antes del token poner la palabra bearer. Por ejemplo bearer ey9u29ue92u492u9u49u294u294u9"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/v1/auth/login": {
      "post": {
        "summary": "Iniciar sesión",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario autenticado correctamente"
          },
          "401": {
            "description": "Credenciales incorrectas"
          }
        }
      }
    },
    "/api/v1/auth/google": {
      "get": {
        "summary": "Iniciar sesión con Google",
        "tags": [
          "Auth"
        ],
        "responses": {
          "302": {
            "description": "Redireccionamiento a Google para iniciar sesión"
          }
        }
      }
    },
    "/api/v1/auth/oauth2/redirect/google": {
      "get": {
        "summary": "Redireccionamiento después de iniciar sesión con Google",
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "Usuario autenticado correctamente"
          }
        }
      }
    },
    "/api/v1/users": {
      "get": {
        "summary": "Obtener todos los usuarios",
        "tags": [
          "User"
        ],
        "responses": {
          "200": {
            "description": "Lista de usuarios"
          }
        }
      },
      "post": {
        "summary": "Crear un nuevo usuario",
        "tags": [
          "User"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario creado correctamente"
          },
          "400": {
            "description": "Error en los datos del usuario"
          }
        }
      }
    },
    "/api/v1/users/me": {
      "get": {
        "summary": "El usuario autenticado recibe sus datos, incluyendo sus rutinas",
        "tags": [
          "User Autenticado"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Información del usuario"
          },
          "401": {
            "description": "Usuario no autenticado"
          }
        }
      },
      "patch": {
        "summary": "Actualizar información del usuario autenticado",
        "tags": [
          "User Autenticado"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario actualizado correctamente"
          },
          "401": {
            "description": "Usuario no autenticado"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/api/v1/users/me/completeprofile": {
      "patch": {
        "summary": "Actualizar información del perfil del usuario autenticado",
        "tags": [
          "User Autenticado"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "gender": {
                    "type": "string"
                  },
                  "age": {
                    "type": "integer"
                  },
                  "height": {
                    "type": "integer"
                  },
                  "weight": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Perfil de Usuario actualizado correctamente"
          },
          "401": {
            "description": "Usuario no autenticado"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/api/v1/users/me/{routineId}": {
      "post": {
        "summary": "Añadir una rutina según el ID,  al usuario autenticado.",
        "tags": [
          "User Autenticado"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "routineId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID de la rutina a añadir."
          }
        ],
        "responses": {
          "200": {
            "description": "Éxito! Rutina añadida al usuario."
          },
          "400": {
            "description": "Hubo un error al intentar añadir la rutina al usuario"
          }
        }
      }
    },
    "/api/v1/users/{id}": {
      "get": {
        "summary": "Obtener los datos del usuario por ID, incluyendo sus Rutinas",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "description": "ID del usuario a obtener"
          }
        ],
        "responses": {
          "200": {
            "description": "Éxito. Devuelve la información del usuario.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "format": "int64"
                    },
                    "email": {
                      "type": "string"
                    },
                    "firstname": {
                      "type": "string"
                    },
                    "routines": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Hubo algun error o el usuario no existe"
          }
        }
      },
      "patch": {
        "summary": "Modificar un usuario por ID",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "description": "ID del usuario a modificar"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "gender": {
                    "type": "string"
                  },
                  "age": {
                    "type": "integer"
                  },
                  "height": {
                    "type": "integer"
                  },
                  "weight": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Éxito. Modifica la información del usuario.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "format": "int64"
                    },
                    "email": {
                      "type": "string"
                    },
                    "firstname": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Hubo algun error o el usuario no existe"
          }
        }
      },
      "delete": {
        "summary": "Elimina un usuario por ID",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario eliminado correctamente"
          },
          "400": {
            "description": "Error al eliminar el usuario o no existe"
          }
        }
      }
    },
    "/api/v1/contact": {
      "post": {
        "summary": "Envía datos del formulario por email",
        "tags": [
          "Misc"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "subject": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email envíado correctamente"
          },
          "400": {
            "description": "Error al intenta enviar el email"
          }
        }
      }
    }
  }
}